<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.StudentVoteActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Male Candidate"
        android:layout_marginBottom="6dp"
        android:id="@+id/buttonStudentMaleCandidate"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:background="@drawable/btn_rounded"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonStudentFemaleCandidate"
        android:layout_below="@id/buttonStudentMaleCandidate"
        android:layout_marginBottom="10dp"
        android:text="Female Candidate"
        android:textColor="@color/white"
        android:background="@drawable/btn_rounded"/>

</RelativeLayout>